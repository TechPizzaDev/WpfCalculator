<UserControl 
    x:Class="Miniräknare.ExpressionField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:l="clr-namespace:Miniräknare">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <l:ExpressionBox Grid.Row="0" x:Name="InputBox" Margin="0,5,0,5" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    Margin="0,2,0,0" HorizontalAlignment="Stretch">
            
            <Image x:Name="StateImage" Width="40" Height="40" />
            
            <TextBox x:Name="ResultBox" IsReadOnly="True" 
                     FontSize="24" FontFamily="Consolas"
                     VerticalAlignment="Center" BorderThickness="0" />
        </StackPanel>
    </Grid>
    
</UserControl>